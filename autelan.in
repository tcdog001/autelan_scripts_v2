#!/bin/bash

if [ -n "${__HISI_AUTELAN_IN__}" ]; then
	return
else
	__HISI_AUTELAN_IN__="$0"
fi

if [ -n "${AUTELAN_DIR}" ]; then
	. ${AUTELAN_DIR}/autelan.env
else
	. autelan.env
fi



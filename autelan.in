#
#$1:server
#$2:user
#$3:pass
#$4:dir_local
#$5:dir_remote
#$6:file
#
ftpget() {
	local server=$1
	local user=$2
	local pass=$3
	local dir_local=$4
	local dir_remote=$5
	local file=$6
	local err=0;
	local tag="OK"

	mkdir -p $(dirname ${dir_local}/${file})

	busybox ftpget -u ${user} -p ${pass} ${server} \
		${dir_local}/${file} ${dir_remote}/${file}; err=$?
	if [ "0" != "${err}" ]; then
		tag="ERROR[${err}]"
	fi

	echo "${tag}: ftpget ${dir_local}/${file} from ${server}:${dir_remote}/${file}"

	return ${err}
}

#
#$1:server
#$2:user
#$3:pass
#$4:dir_local
#$5:dir_remote
#$6:file
#
ftpput() {
        local server=$1
        local user=$2
        local pass=$3
        local dir_local=$4
        local dir_remote=$5
        local file=$6
        local err=0;
        local tag="OK"

        mkdir -p $(dirname ${dir_local}/${file})

	local file_remote
	if [[ "_" == "${dir_remote}" ]]; then
		file_remote=${file}
	else
		file_remote=${dir_remote}/${file}
	fi

        busybox ftpput -u ${user} -p ${pass} ${server} \
                ${file_remote} ${dir_local}/${file}; err=$?
        if [ "0" != "${err}" ]; then
                tag="ERROR[${err}]"
        fi

        echo "${tag}: ftpput ${dir_local}/${file} to ${server}:${file_remote}"

        return ${err}
}

#
#$1:dir_local
#$2:dir_remote
#$3:file
#
ftpget_byuser() {
        local dir_local=$1
        local dir_remote=$2
        local file=$3

	local ip user pass
	read ip user pass _ < .user

	ftpget ${ip} ${user} ${pass} ${dir_local} ${dir_remote} ${file}
}

#
#$1:dir_local
#$2:dir_remote
#$3:file
#
ftpput_byuser() {
        local dir_local=$1
        local dir_remote=$2
        local file=$3

	local ip user pass
	read ip user pass _ < .user

        ftpput ${ip} ${user} ${pass} ${dir_local} ${dir_remote} ${file}
}

#
# $1:package path
#
package_prepare() {
	local path=$1

	if [ -d "${path}/autelan" ]; then
		echo "Copy Changed Files ..."
		CP ${path}/autelan/* ${path}
		echo "Copy Changed Files end"
	fi
}

#
# $1:package path
#
package_compile() {
	local path=$1

	echo "Make ..."
	make -C ${path}
	echo "Make end"
}

#
# $1:package path
#
package_install() {
	local path=$1

	echo "Make install ..."
	make -C ${path} install
	echo "Make install end"
}

#
# $1:package path
#
package_common() {
	package_prepare $1
	package_compile $1
	package_install $1
}

git_pull() {
	local dir="$1"
	local url="$2"

	if  [[ ! -d "${dir}/.git" ]]; then
		rm -fr ${dir}
		git clone ${url} ${dir}
	fi

	pushd ${dir}
	git pull
	echo "git clone to ${dir}"
	popd
}

autelan_git_pull() {
	local dir_capp=${hisitopdir}/capp
	
	git_pull ${dir_capp} git@192.168.15.112:capp.git
}

install_autelan() {
        local dst="$1"
        local dir_capp=${hisitopdir}/capp

        rm -fr ${dst}/*
        mkdir -p ${dst}
        cp -fpR ${dir_capp}/* ${dst}/
	
	echo "install capp to ${dst}"
}

